<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="email_template_ot_registration_to_emp" model="mail.template">
            <field name="name">Mail OT Registration</field>
            <field name="model_id" ref="OT.model_ot_registration"/>
            <field name="email_from"></field>
            <field name="email_to">${(object.employee_id.work_email or '')|safe}</field>
            <field name="body_html" type="html">
                <div>
                    <h1>Hi ${object.create_uid.name or ''}</h1>
                    <p>You have successfully registered for OT.</p>
                    <p>OT Project: ${object.project_id.name or ''}</p>
                    <p>OT Manager: ${object.manager_id.name or ''}</p>
                    <p>OT Status: ${object.state or ''}</p>
                    <p>Regards,</p>
                    <p>OT Management</p>
                </div>
            </field>
        </record>
    </data>

    <data noupdate="1">
        <record id="email_template_to_registration_to_pm" model="mail.template">
            <field name="name">Mail OT Registration to PM</field>
            <field name="model_id" ref="OT.model_ot_registration"/>
            <field name="email_from">${(object.employee_id.work_email or '')|safe}</field>
            <field name="email_to">${(object.manager_id.work_email or '')|safe}</field>
            <field name="body_html" type="html">
                <div>
                    <h1>Hi ${object.employee_id.parent_id.name or ''}</h1>
                    <p>I want to register for OT</p>
                    <p>OT Project: ${object.project_id.name or ''}</p>
                    <p>OT Manager: ${object.manager_id.name or ''}</p>
                    <p>Regards</p>
                </div>
            </field>
        </record>
    </data>

</odoo>